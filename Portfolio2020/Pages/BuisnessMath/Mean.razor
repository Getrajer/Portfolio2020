                    @foreach (var obj in output_string)
                    {
                        @obj.Variable
                    }

                </div>

                <div class="eqation-underline-container">
                    <div class="underline"></div>
                </div>


                <div class="text-center">
                    @if (ammount_1 != 0)
                    {
                        @ammount_1;
                    }
                </div>

                <div class="result_container">
                    <button class="btn" @onclick="Calculate_First_Mean">Calculate Mean</button>

                    @if (isCalcMean == true)
                    {
                        <div class="result_text">Result: @result_1</div>
                    }
                </div>
            </div>
        </section>
        <!--............................................-->
        <!--Simple Frequency Distribution Mean-->
        <section class="program_container">
            <div class="theory_container">
                <div class="heading_container">
                    <h2>Mean of a Simple Frequency Distribution</h2>
                </div>
                <p>
                    To calculate mean for simple frequency distribution, we need to calculate totals from the function f(x). Then devide this totals
                </p>
            </div>

            <article class="theory_container">
                <div class="pattern_container">
                    <div class="heading_container">
                        <h3>Arithmetic Mean for simple frequency distribution pattern:</h3>
                    </div>

                    <div class="text-center">
                        <svg id="Sigma" enable-background="new 0 0 58 60" height="30" viewBox="0 0 58 60" width="30" xmlns="http://www.w3.org/2000/svg"><path d="m57.03 60h-56c-.391 0-.746-.228-.909-.583s-.104-.773.152-1.069l24.437-28.347-24.438-28.347c-.254-.296-.314-.714-.151-1.069s.518-.583.909-.583h56c.552 0 1 .448 1 1v15c0 .552-.448 1-1 1h-7c-.552 0-1-.448-1-1v-7h-27.89l16.664 20.367c.301.369.301.898 0 1.267l-16.664 20.367h27.89v-7c0-.552.448-1 1-1h7c.552 0 1 .448 1 1v15c0 .549-.447.997-1 .997zm-53.818-2h52.818v-13h-5v7c0 .552-.448 1-1 1h-31c-.387 0-.738-.223-.904-.572s-.115-.762.13-1.062l17.482-21.367-17.482-21.367c-.245-.299-.295-.712-.13-1.062s.517-.572.904-.572h31c.552 0 1 .448 1 1v7h5v-13h-52.818l23.575 27.347c.323.375.323.931 0 1.306z" /></svg>
                        f(x)
                    </div>

                    <div class="eqation-underline-container">
                        <div class="underline"></div>
                    </div>

                    <div class="text-center">
                        n
                    </div>

                    <div class="pattern_explain">
                        <div class="ex_item">
                            <svg id="Sigma" enable-background="new 0 0 58 60" height="30" viewBox="0 0 58 60" width="30" xmlns="http://www.w3.org/2000/svg"><path d="m57.03 60h-56c-.391 0-.746-.228-.909-.583s-.104-.773.152-1.069l24.437-28.347-24.438-28.347c-.254-.296-.314-.714-.151-1.069s.518-.583.909-.583h56c.552 0 1 .448 1 1v15c0 .552-.448 1-1 1h-7c-.552 0-1-.448-1-1v-7h-27.89l16.664 20.367c.301.369.301.898 0 1.267l-16.664 20.367h27.89v-7c0-.552.448-1 1-1h7c.552 0 1 .448 1 1v15c0 .549-.447.997-1 .997zm-53.818-2h52.818v-13h-5v7c0 .552-.448 1-1 1h-31c-.387 0-.738-.223-.904-.572s-.115-.762.13-1.062l17.482-21.367-17.482-21.367c-.245-.299-.295-.712-.13-1.062s.517-.572.904-.572h31c.552 0 1 .448 1 1v7h5v-13h-52.818l23.575 27.347c.323.375.323.931 0 1.306z" /></svg>
                            f(x) - sum of all f(x) numbers
                        </div>

                        <div class="ex_item">
                            n - ammount of numbers
                        </div>
                    </div>
                </div>
            </article>

            <section class="calculation_container">
                <div class="calculation_table">
                    <div class="heading_container">
                        <h3>Calculator of mean for simple frequency distribution</h3>
                    </div>
                    <div class="custom_input_container">
                        <div class="input_box">
                            <label>x: </label>
                            <input @bind="SFX" />
                        </div>
                        <div class="input_box">
                            <label>f: </label>
                            <input @bind="SFF" />
                        </div>

                        <div class="button-container">
                            <button class="btn" @onclick="Add_C_SFDO">Add New Variable</button>
                        </div>


                        @if (isCustom_SFD == true)
                        {
                            <div class="button-container">
                                <button class="btn" @onclick="Delete_C_SFDO">Delete Last</button>
                            </div>
                        }

                        @if (isCustom_SFD == true || isRandom_SFD == true)
                        {
                            <div class="button-container">
                                <button class="btn" @onclick="RESET_SFD">RESET PROGRAM</button>
                            </div>
                        }

                    </div>
                    <div class="button-container">
                        @if (isCustom_SFD == false)
                        {
                            <button class="btn" @onclick="Generate_Simple_Freq_D">@btn_s_f_text</button>
                        }
                    </div>

                    @if (isRandom_SFD == true)
                    {
                        <div class="example_txt_container">
                            @SFD_Text_Example
                        </div>
                    }

                    <table class="table_calc">
                        <thead>
                            <tr>
                                <th scope="col"><div class="data_title">x</div></th>
                                <th scope="col"><div class="data_title">f</div></th>
                                <th scope="col"><div class="data_title">f(x)</div></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in simple_Frequency_Data_Objects)
                            {
                                <tr>
                                    <td><div class="data">@obj.X</div></td>
                                    <td><div class="data">@obj.F</div></td>
                                    <td><div class="data">@obj.Fx</div></td>
                                    <td>
                                        <button class="btn" @onclick="@(e => Delete_SFDO_ByID(obj.Id))">X</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="result_container">
                    <div class="heading_container">
                        <h3>Calculatior of Mean For Simple Frequency Distribution</h3>
                    </div>
                    <button class="btn" @onclick="Calc_Simple_Frequency_Distribution_Mean">Calculate Mean</button>

                    @if (isCalculated_SFD == true)
                    {
                        <div class="variables_container">
                            <p>Total f = @f_total </p>
                            <p>Total F(x) = @fx_total </p>
                        </div>
                        <div class="result_text">Result: @CSFDM_Result</div>
                    }

                </div>
            </section>
        </section>
        <!--............................................-->
        <!--Grouped Discrete Frequency Distribution Mean-->
        <section class="program_container">
            <div class="theory_container">
                <div class="heading_container">
                    <h2>Grouped frequency distribution mean</h2>
                </div>
                <p>
                    Grouped distribution is useyfull when some of the data might be lost. <br /> <br />
                    This is done by:<br />
                    -Using group to estimate mid-points as representive x-values<br />
                    -Estimating the total of the values in each group using x times f (the group frequency)<br />
                    -Adding these totals toghether from an estimate of the total of all values<br />
                    -Then dividing by the total number of items<br />
                </p>
            </div>

            <article class="theory_container">
                <div class="pattern_container">
                    <div class="heading_container">
                        <h3>Arithmetic Mean for grouped frequency distribution pattern:</h3>
                    </div>

                    <div class="text-center">
                        <svg id="Sigma" enable-background="new 0 0 58 60" height="30" viewBox="0 0 58 60" width="30" xmlns="http://www.w3.org/2000/svg"><path d="m57.03 60h-56c-.391 0-.746-.228-.909-.583s-.104-.773.152-1.069l24.437-28.347-24.438-28.347c-.254-.296-.314-.714-.151-1.069s.518-.583.909-.583h56c.552 0 1 .448 1 1v15c0 .552-.448 1-1 1h-7c-.552 0-1-.448-1-1v-7h-27.89l16.664 20.367c.301.369.301.898 0 1.267l-16.664 20.367h27.89v-7c0-.552.448-1 1-1h7c.552 0 1 .448 1 1v15c0 .549-.447.997-1 .997zm-53.818-2h52.818v-13h-5v7c0 .552-.448 1-1 1h-31c-.387 0-.738-.223-.904-.572s-.115-.762.13-1.062l17.482-21.367-17.482-21.367c-.245-.299-.295-.712-.13-1.062s.517-.572.904-.572h31c.552 0 1 .448 1 1v7h5v-13h-52.818l23.575 27.347c.323.375.323.931 0 1.306z" /></svg>
                        f(x)
                    </div>

                    <div class="eqation-underline-container">
                        <div class="underline"></div>
                    </div>

                    <div class="text-center">
                        <svg id="Sigma" enable-background="new 0 0 58 60" height="30" viewBox="0 0 58 60" width="30" xmlns="http://www.w3.org/2000/svg"><path d="m57.03 60h-56c-.391 0-.746-.228-.909-.583s-.104-.773.152-1.069l24.437-28.347-24.438-28.347c-.254-.296-.314-.714-.151-1.069s.518-.583.909-.583h56c.552 0 1 .448 1 1v15c0 .552-.448 1-1 1h-7c-.552 0-1-.448-1-1v-7h-27.89l16.664 20.367c.301.369.301.898 0 1.267l-16.664 20.367h27.89v-7c0-.552.448-1 1-1h7c.552 0 1 .448 1 1v15c0 .549-.447.997-1 .997zm-53.818-2h52.818v-13h-5v7c0 .552-.448 1-1 1h-31c-.387 0-.738-.223-.904-.572s-.115-.762.13-1.062l17.482-21.367-17.482-21.367c-.245-.299-.295-.712-.13-1.062s.517-.572.904-.572h31c.552 0 1 .448 1 1v7h5v-13h-52.818l23.575 27.347c.323.375.323.931 0 1.306z" /></svg>
                        f
                    </div>

                    <div class="pattern_explain">
                        <div class="ex_item">
                            <svg id="Sigma" enable-background="new 0 0 58 60" height="30" viewBox="0 0 58 60" width="30" xmlns="http://www.w3.org/2000/svg"><path d="m57.03 60h-56c-.391 0-.746-.228-.909-.583s-.104-.773.152-1.069l24.437-28.347-24.438-28.347c-.254-.296-.314-.714-.151-1.069s.518-.583.909-.583h56c.552 0 1 .448 1 1v15c0 .552-.448 1-1 1h-7c-.552 0-1-.448-1-1v-7h-27.89l16.664 20.367c.301.369.301.898 0 1.267l-16.664 20.367h27.89v-7c0-.552.448-1 1-1h7c.552 0 1 .448 1 1v15c0 .549-.447.997-1 .997zm-53.818-2h52.818v-13h-5v7c0 .552-.448 1-1 1h-31c-.387 0-.738-.223-.904-.572s-.115-.762.13-1.062l17.482-21.367-17.482-21.367c-.245-.299-.295-.712-.13-1.062s.517-.572.904-.572h31c.552 0 1 .448 1 1v7h5v-13h-52.818l23.575 27.347c.323.375.323.931 0 1.306z" /></svg>
                            f(x) - sum of all f(x) numbers
                        </div>

                        <div class="ex_item">
                            <svg id="Sigma" enable-background="new 0 0 58 60" height="30" viewBox="0 0 58 60" width="30" xmlns="http://www.w3.org/2000/svg"><path d="m57.03 60h-56c-.391 0-.746-.228-.909-.583s-.104-.773.152-1.069l24.437-28.347-24.438-28.347c-.254-.296-.314-.714-.151-1.069s.518-.583.909-.583h56c.552 0 1 .448 1 1v15c0 .552-.448 1-1 1h-7c-.552 0-1-.448-1-1v-7h-27.89l16.664 20.367c.301.369.301.898 0 1.267l-16.664 20.367h27.89v-7c0-.552.448-1 1-1h7c.552 0 1 .448 1 1v15c0 .549-.447.997-1 .997zm-53.818-2h52.818v-13h-5v7c0 .552-.448 1-1 1h-31c-.387 0-.738-.223-.904-.572s-.115-.762.13-1.062l17.482-21.367-17.482-21.367c-.245-.299-.295-.712-.13-1.062s.517-.572.904-.572h31c.552 0 1 .448 1 1v7h5v-13h-52.818l23.575 27.347c.323.375.323.931 0 1.306z" /></svg>
                            f - ammount of f numbers
                        </div>
                    </div>
                </div>
            </article>

            <section class="calculation_container">
                <div class="calculation_table">
                    <div class="heading_container">
                        <h3>Calculator of mean for grouped frequency distribution</h3>
                    </div>
                    <div class="custom_input_container">

                        <div class="input_box">
                            <label>Range1: </label>
                            <input @bind="GDFR1" />
                            <p>@error_GD</p>
                        </div>
                        <div class="input_box">
                            <label>Range2: </label>
                            <input @bind="GDFR2" />
                        </div>


                        @if (isCustom_GDFD == true)
                        {
                            <p>Range 1: @GDFR1</p>
                            <p>Range 2: @GDFR2</p>
                        }

                        <div class="input_box">
                            <label>f: </label>
                            <input @bind="GDFF" />
                        </div>


                        <div class="button-container">
                            <button class="btn" @onclick="Add_C_GDDO">Add New Variable</button>
                        </div>


                        @if (isCustom_GDFD == true)
                        {
                            <div class="button-container">
                                <button class="btn" @onclick="Delete_C_GDFDO">Delete Last</button>
                            </div>
                        }

                        @if (isCustom_GDFD == true || isRandom_GDFD == true)
                        {
                            <div class="button-container">
                                <button class="btn" @onclick="RESET_GDFD">RESET PROGRAM</button>
                            </div>
                        }

                    </div>
                    <div class="button-container">
                        <button class="btn" @onclick="Generate_Discrete_Frequency_D">@btn_d_f_text</button>
                    </div>

                    @if (isRandom_GDFD == true)
                    {
                        <div class="example_txt_container">
                            @GDFD_Text_Example
                        </div>
                    }

                    <table class="table_calc">
                        <thead>
                            <tr>
                                <th scope="col"><div class="data_title">Range</div></th>
                                <th scope="col"><div class="data_title">x</div></th>
                                <th scope="col"><div class="data_title">f</div></th>
                                <th scope="col"><div class="data_title">f(x)</div></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in grouped_Discrete_Frequency_Data_Objects)
                            {
                                <tr>
                                    <td><div class="data">@obj.Range_1 to @obj.Range_2</div></td>
                                    <td><div class="data">@obj.X</div></td>
                                    <td><div class="data">@obj.F</div></td>
                                    <td><div class="data">@obj.Fx</div></td>
                                    <td>
                                        <button class="btn" @onclick="@(e => Delete_GDFDO_ByID(obj.Id))">X</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="result_container">
                    <button class="btn" @onclick="Calc_Discrete_Frequency_Distribution_Mean">Calculate Mean</button>

                    @if (isCalculated_GFD == true)
                    {
                        <div class="variables_container">
                            <p>Total f = @f_d_total </p>
                            <p>Total F(x) = @fx_d_total </p>
                        </div>
                        <div class="result_text">Result: @CDFDM_Result</div>
                    }
                </div>
            </section>
        </section>
        <!--............................................-->




    </div>
</div>