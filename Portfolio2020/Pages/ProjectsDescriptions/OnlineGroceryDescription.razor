@code{
    bool img1_open = false;
    bool img2_open = false;
    bool img3_open = false;


    void open_img(string img)
    {
        switch (img)
        {
            case "1":
                img1_open = img1_open ? false : true;
                break;
            case "2":
                img2_open = img2_open ? false : true;
                break;
            case "3":
                img3_open = img3_open ? false : true;
                break;
        }
    }
}